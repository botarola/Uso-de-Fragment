        <Space style="@style/espacio"></Space>

        <ImageButton
            android:src="@drawable/musica"
            style="@style/botones"
            android:id="@+id/musica"/>

        <Space style="@style/espacio"></Space>

        <ImageButton
            android:src="@drawable/nivel"
            style="@style/botones"
            android:id="@+id/nivel"/>

    </LinearLayout>


</FrameLayout>